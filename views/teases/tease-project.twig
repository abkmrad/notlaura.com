{% extends "teases/tease.twig" %}

{% block content %}

  <figure class="tease-thumb">
    <a href="{{post.project_link ? post.project_link : post.link}}" {{post.project_link ? 'target="blank"'}} title="{{post.title}}">
      <img src="{{post.thumbnail.src|resize(700, 450)}}" alt="Thumbnail for {{post.title}}">
    </a>
  </figure>

  <div class="tease-info">
    <h4 class="thumb-title">{{post.title}}{% if post.project_link %}
        <a href="{{post.project_link}}" class="launch-btn" target="blank"><span class="screen-reader">Launch Project</span> {% include 'partials/svg.twig' with { file: 'new-window', prefix: 'icon-inline'}%}</a>
      {% endif %}
    </h4>
    <p class="tease-tagline">{{post.tagline}}</p>
    <p class="meta">{{post.para_intro}} <a href="{{post.link}}" title="{{post.title}}"><strong>Read More &rarr;</strong></a></p>
    {% for c in post.get_terms('project_type') %}{{c.name}}{% endfor %}
  </div>

{% endblock %}
