{% block html_head_container %}
    {% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

<body class="{{body_class}} wf-loading" data-template="base.twig" id="top">

  <div class="visually-hidden">
    {% include 'partials/svg-defs.svg' %}
  </div>

  <div class="site">

  {% if callout_tf == true %}
    <div class="site-callout callout">
      <div class="inner">
        <p class="meta-light">{{callout_bar}}</p>
      </div>
    </div>
  {% endif %}

  <header class="site-header" role="banner">
    <div class="inner">
      {% include 'headers/header-site.twig' %}
    </div>
  </header>

  <main class="site-main inner" role="main">

    {% block header %}
      <header class="main-header">
        <h1 class="page-title">{{post.title}}</h1>
        <p class="page-tagline">{{post.tagline}}</p>
      </header>
    {% endblock %}

    <div class="main-content">
      {% block content %}
          Sorry, no content
      {% endblock %}
    </div>

    {% block sidebar %}
      <aside class="main-aside">
        {{sidebar}}
      </aside>
    {% endblock %}

    <div class="main-misc">
      <h4>Maybe some fun content here or something. Or not.</h4>
    </div>

  </main>

  <footer class="site-footer" role="contentinfo">
    <div class="inner">

    {% block footer %}

      <nav class="link-back-top">
        <a href="#top">
          {% include 'partials/svg.twig' with {'file': 'arrow-up', 'prefix': 'icon' } %}
        </a>
      </nav>

      <div class="footer-content">
        <h5>What now?</h5>
        <ul class="list-services">
          <li><a href="{{site.link}}/teach-me-to-fish">Teach me to fish.</a></li>
          <li><a href="{{site.link}}/fish-with-me">Let's fish together!</a></li>
          <li><a href="{{site.link}}/fish-for-me">Fish for me.</a></li>
        </ul>
      </div>

      <div class="footer-content widgets">
        {% include 'footer.twig' %}
      </div>

      <div class="footer-content colophon">
        <p class="credit">&copy; {{ "now"|date('Y') }} Lara Schenck, LLC. Powered by <a href="http://wordpress.org">WordPress</a> and <a href="http://upstatement.com/timber">Timber</a>, hosted by <a href="http://webfaction.com" target="blank">WebFaction</a>. Source <a href="http://github.com/laras126/notlaura.com">on Github</a>.</p>
      </div>

      {{ function('wp_footer') }}

    {% endblock %}
  </div>
</footer>

</div> <!-- /.site -->

</body>

</html>
