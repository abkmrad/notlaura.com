{% extends "base.twig" %}

{% block header %}{% endblock %}

{% block content %}

<article class="module -article">

		<header class="module-header">
			<a href="{{site.link}}/blog">&larr; Back to Blog</a>
			<h1 class="single-title">{{post.title}}</h1>
		</header>

		{% if post.format == 'link' %}
			<div class="module-link">
				<a href="{{post.link_url}}" class="btn -has-icon">Visit Link {% include "svgs/link.twig" with { class: 'icon-inline' } %}</a>
			</div>
		{% endif %}

		<aside class="module-rail">
			{% include "partials/tease-meta.twig" %}
		</aside>

		<div class="module-content">
			{% if post.content %}
				{{post.content}}
			{% else %}
				{# I don't think these are being used. TODO check. #}
				{% include 'partials/flexcontent-logic.twig' with { elem: post.get_field('blocks') } %}
			{% endif %}

			{# <div class="comments" id="disqus_thread"></div>
			<script type="text/javascript">
					/* * * CONFIGURATION VARIABLES * * */
					var disqus_shortname = 'notlaura';

					/* * * DON'T EDIT BELOW THIS LINE * * */
					(function() {
							var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
							dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
							(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					})();
			</script>
			<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript> #}
		</div>

	</article> <!-- /.module -->

	{% include 'partials/prev-next.twig' %}

{% endblock %}

{% block misc %}
<div class="inner">
	<aside class="module -article -flipped">
		<div class="module-link">
			<h4 class="widget-title">Hello!</h4>
		</div>
		<div class="module-content">
			<div class="module -aside -flipped">
				<div class="module-rail">
					{% include "partials/srcset.twig" with { img: TimberImage(3141) } %}
				</div>
				<div class="module-content">
					{# <p class="caption">Here's a picture if me in real life! Click to see another one.</p> #}
					<p>I hope you find something interesting to read here on my blog! Find me at these other places on the web:</p>
					{{ include('partials/social.twig') }}
				</div>
			</div>
		</div>

		<div class="module-rail">
			<h5 class="widget-title">Site Info</h5>
			<ul>
				<li>Font: Adelle Sans</li>
				<li>Built with WordPress and Timber</li>
				<li>Animations: GreenSock Animation Platform</li>
				<li>CSS Grid Layout</li>
			</ul>
		</div>

	</aside>

	</div>
{% endblock %}
