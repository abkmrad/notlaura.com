
<header class="main-header">

	{% block title_area %}
		<h1 class="page-title">{{post.title}}</h1>
	{% endblock %}

	{% if post.tagline %}
		<p class="page-tagline">{{post.tagline}}</p>
	{% endif %}

	{% if post.image and post.svg is empty%}
		<figure class="page-image">
			{# TODO do responsive images here and fix caption style #}
			{# Logic for project link. #}
			{{post.project_link ? '<a href="'~post.project_link~'" target="blank">'}}
				<img src="{{TimberImage(post.image).src|resize(1024)}}" alt="{{post.title|striptags}}">
			{{post.project_link ? '</a>'}}

			{% if post.image_caption %}
				<figcaption class="caption-opaque">{{post.image_caption}}</figcaption>
			{% endif %}
		</figure>
	{% endif %}

	{% if post.svg %}
		<figure class="bleed">
			{% include 'partials/svg.twig' with { 'file': post.svg, 'prefix': 'shape' } %}
			{% if post.image_caption %}
				<figcaption class="caption-clear">{{post.image_caption}}</figcaption>
			{% endif %}
		</figure>
	{% endif %}

	{% if post.intro %}
		<p class="lead page-intro">{{post.intro}}</p>
	{% endif %}

	{% if post.para_intro %}
		<p>{{post.para_intro}}</p>
	{% endif %}

</header>