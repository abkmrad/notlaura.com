<header class="page-header">

	<div class="contain-md">
		
		{% if post.post_type == 'project' %}
			<nav class="clearfix pagenav bleed">
				<div class="pagenav-link link-prev">
					{% if post.prev %}
					<a href="{{post.prev.link}}" title="Previous Project">
						{% include 'partials/svg.twig' with { 'file': 'arrow-left', 'prefix': 'icon' } %}
					</a>
					{% endif %}
				</div>
				<div class="pagenav-middle">	
			
		{% endif %}

		<h1 class="page-title">{{post.title}}</h1>
		
		{% if post.post_type == 'project' %}
				</div>	

				<div class="pagenav-link link-next">
					{% if post.next %}
					<a href="{{post.next.link}}" title="Next Project">
						{% include 'partials/svg.twig' with { 'file': 'arrow-right', 'prefix': 'icon' } %}
					</a>
					{% endif %}
				</div>

			</nav> <!-- /.pagenav -->
		{% endif %}
		{% if post.tagline %} 
			<p class="page-tagline">{{post.tagline}}</p>
		{% endif %}
		
		{% if post.image and post.svg is empty%}
			<figure class="bleed">
				
				<img class="page-header-image img-flex" src="{{TimberImage(post.image).src}}" alt="{{post.title|striptags}}">
				
				{% if post.image_caption %}
					<figcaption class="caption-opaque">{{post.image_caption}}</figcaption>
				{% endif %}

			</figure>
		{% endif %}

		{% if post.svg %}
			<figure class="bleed">
				{% include 'partials/svg.twig' with { 'file': post.svg, 'prefix': 'shape' } %}
				{% if post.image_caption %}
					<figcaption class="caption-clear">{{post.image_caption}}</figcaption>
				{% endif %}
			</figure>
		{% endif %}
	</div>

	<div class="contain-sm">
		{% if post.intro %}
			<p class="lead page-intro">{{post.intro}}</p>
		{% endif %}

		{% if post.para_intro %}
			<p>{{post.para_intro}}</p>
		{% endif %}
	</div>

</header> <!-- /.page-header -->