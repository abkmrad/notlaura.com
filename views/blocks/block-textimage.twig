{% extends "blocks/block.twig" %}

{% block content %}
	{% if blck.text_format == 'caption'%}
		<figure class="fig-large">
			{% include "partials/srcset.twig" with { img: TimberImage(blck.image) } %}
			{% if blck.caption %}
				<figcaption class="caption-clear">{{blck.caption}}</figcaption>
			{% endif %}
		</figure>
	{% elseif blck.text_format == 'paragraph'%}
	<div class="fig-large textimage-image">
		{% include "partials/srcset.twig" with { img: TimberImage(blck.image) } %}
	</div>
	{{blck.text|wpautop}}
	{% endif %}
{% endblock %}
