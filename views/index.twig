{% endblock %}

{% block content %}

	{# TODO: Find in database, remove THIS and put in a plugin #}
	{# {% for post in all_posts %}
		{% if 'margin-top:' in post.content %}
			<a href="{{post.link}}">{{post.title}}</a> {{post.date}}<br>
		{% endif %}
	{% endfor %} #}

	<div class="tease-loop">
		{% for post in posts %}
			{% include ['teases/tease-'~post.post_type~'.twig', 'teases/tease.twig'] %}
		{% endfor %}
	</div>

	<nav class="pagination">
  	<div class="pagenav-link link-prev">
  		{% if pagination.prev %}
  			<a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Newer</a>
		{% endif %}
		</div>
	    <ul class="pages pagenav-middle">
        {% for page in pagination.pages %}
          <li>
            {% if page.link %}
              <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
            {% else %}
              <span class="{{page.class}}">{{page.title}}</span>
            {% endif %}
          </li>
        {% endfor %}
    	</ul>
	    <div class="pagenav-link link-next">
	    	{% if pagination.next %}
	    		<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Older</a>
	        {% endif %}
	    </div>
	</nav> <!-- /.pagination -->

{% endblock %}
