{% block header %}
	{# {% include 'headers/header-page.twig' %} #}
	<header class="main-header">
		<div class="inner">
			<div class="grid-content">
				<div class="main-aside">
				{% include "partials/srcset.twig" with { img: TimberImage(3141), class: '' } %}
				{# </div> #}
			</div>
			<div class="main-content">
